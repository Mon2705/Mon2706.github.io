<body>
  <h1>เครื่องมือวิเคราะห์หวยลาว</h1>
  
  <div class="input-group">
    <label for="lotto-number">กรอกเลข 4 ตัว:</label>
    <input type="text" id="lotto-number" maxlength="4">
  </div>
  
  <button onclick="calculate()">คำนวณเลขเด่น</button>
  
  <div id="result" style="margin-top: 20px; display: none;">
    <h3>ผลการวิเคราะห์:</h3>
    <p id="output"></p>
  </div>

  <script>
    function calculate() {
      const num = document.getElementById('lotto-number').value;
      if (num.length !== 4) {
        alert("กรุณากรอกเลข 4 หลัก");
        return;
      }
      
      const lastDigit = num[3];
      const compareMap = {
        '0': '4,5,7,8,9', '1': '5,6,8,9,0', '2': '6,7,9,0,1',
        '3': '7,8,0,1,2', '4': '8,9,1,2,3', '5': '9,0,2,3,4',
        '6': '0,1,3,4,5', '7': '1,2,4,5,6', '8': '2,3,5,6,7', 
        '9': '3,4,6,7,8'
      };
      
      document.getElementById('output').textContent = 
        `เลขเทียบ ${lastDigit} = ${compareMap[lastDigit]}`;
      document.getElementById('result').style.display = 'block';
    }
  </script>
</body>
</html>
